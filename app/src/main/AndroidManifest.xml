<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studio111.commentist">
<uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.example.studio111.commentist.Utilities.PlayerService">

        </service>

        <receiver android:name=".CommentistWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.studio111.commentist.ACTION_DATA_UPDATED" />
                <action android:name="com.example.studio111.commentist.ACTION_PAUSE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/appwidget" />
        </receiver>
        <service android:name=".AppWidgetIntentService"/>
        <service
            android:name=".MyFirebaseMessagingService">
            <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
            <!--<meta-data-->
                <!--android:name="com.google.firebase.messaging.default_notification_icon"-->
                <!--android:resource="@drawable/ic_play_black_18dp" />-->
            <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
                 notification message. See README(https://goo.gl/6BKBk7) for more. -->
            <!--<meta-data-->
                <!--android:name="com.google.firebase.messaging.default_notification_color"-->
                <!--android:resource="@color/colorAccent" />-->
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <provider
            android:authorities="com.example.studio111.commentist"
            android:name="com.example.studio111.commentist.Data.FeedProvider"
            android:exported="false"/>
    </application>

</manifest>