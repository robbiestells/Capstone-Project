<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    spp:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/episodeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="301 - Episode name "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/episodeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/episodeLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/episodeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />



</LinearLayout>
